      </a>
    </li>
    <!-- th:classappend : 동적 클래스 추가 -->
    <th:block th:each="i: ${#numbers.sequence(pagingVO.startPage,pagingVO.endPage)}">
       <li class="page-item" th:classappend="${pagingVO.pageNo == (i+1)?'active':''}" aria-current="page">
          <a class="page-link" th:href="@{/board/list(pageNo=${i})}">[[${i}]]</a>
       </li>
    
    </th:block>
   
    <li th:if="${pagingVO.hasNext}" class="page-item">
      <a class="page-link" th:href="@{/board/list(pageNo=${pagingVO.startPage+1})}" aria-label="Next">
